/* 媒体页样式 */
.page-media {
  padding-bottom: 60rpx;
  min-height: 100vh;
}

.page-media .header {
  text-align: center;
  color: #fff;
  margin-bottom: 40rpx;
  padding: 40rpx 20rpx;
}

.page-media .header .title {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.page-media .header .desc {
  font-size: 26rpx;
  opacity: 0.9;
}

.empty-card {
  text-align: center;
  padding: 80rpx 40rpx;
}

.empty-text {
  color: #666;
  font-size: 30rpx;
}

.tabs {
  display: flex;
  gap: 20rpx;
  margin-bottom: 24rpx;
  padding: 0 10rpx;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 24rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: #666;
}

.tab.active {
  background: #fff;
  color: #667eea;
  font-weight: 600;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.2);
}

.media-section {
  padding: 0 10rpx;
}

.media-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.image-card .preview-img {
  width: 100%;
  border-radius: 12rpx;
  display: block;
  background: #f5f5f5;
}

.media-title {
  display: block;
  margin-top: 16rpx;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.btn-save {
  margin-top: 20rpx;
  padding: 20rpx;
  background: #667eea;
  color: #fff;
  border: none;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.preview-video {
  width: 100%;
  height: 400rpx;
  border-radius: 12rpx;
  background: #000;
}

.video-card .media-title {
  margin-top: 16rpx;
}
