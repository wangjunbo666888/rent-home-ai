/** 公寓管理 - 全局样式 */
page {
  background-color: #f5f5f5;
  font-size: 28rpx;
  color: #333;
}

.container {
  padding: 24rpx;
  box-sizing: border-box;
}

/* 按钮 */
.btn {
  display: inline-block;
  padding: 16rpx 32rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
}
.btn-primary {
  background-color: #1989fa;
  color: #fff;
}
.btn-secondary {
  background-color: #eee;
  color: #333;
}
.btn-danger {
  background-color: #ee0a24;
  color: #fff;
}
.btn-small {
  padding: 8rpx 20rpx;
  font-size: 24rpx;
  margin-right: 12rpx;
}

/* 表单 */
.form-row {
  margin-bottom: 24rpx;
}
.form-label {
  display: block;
  margin-bottom: 12rpx;
  color: #666;
  font-size: 26rpx;
}
.form-input {
  width: 100%;
  padding: 24rpx 20rpx;
  min-height: 88rpx;
  line-height: 1.5;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}
.form-textarea {
  min-height: 120rpx;
}

/* 错误/空态 */
.error-msg {
  color: #ee0a24;
  font-size: 26rpx;
  margin-bottom: 16rpx;
}
.empty-msg {
  color: #999;
  text-align: center;
  padding: 60rpx 0;
}
