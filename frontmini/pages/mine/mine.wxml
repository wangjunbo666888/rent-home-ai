<!-- 我的：卡片展示假数据（昵称、电话等） -->
<view class="page-mine">
  <view class="header-bar">
    <text class="header-title">我的</text>
  </view>

  <scroll-view class="main-scroll" scroll-y enhanced show-scrollbar="{{false}}">
    <!-- 用户信息卡片 -->
    <view class="card user-card">
      <view class="user-avatar">
        <text class="avatar-placeholder">{{user.nickname ? user.nickname[0] : '我'}}</text>
      </view>
      <view class="user-info">
        <view class="info-row">
          <text class="info-label">昵称</text>
          <text class="info-value">{{user.nickname}}</text>
        </view>
        <view class="info-row">
          <text class="info-label">电话</text>
          <text class="info-value">{{user.phone}}</text>
        </view>
      </view>
    </view>

    <!-- 扩展假数据卡片 -->
    <view class="card extra-card" wx:if="{{extraItems.length > 0}}">
      <view class="card-title">偏好信息</view>
      <view
        class="extra-row"
        wx:for="{{extraItems}}"
        wx:key="label"
      >
        <text class="extra-label">{{item.label}}</text>
        <text class="extra-value">{{item.value}}</text>
      </view>
    </view>
  </scroll-view>
</view>
