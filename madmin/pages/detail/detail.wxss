.page-detail .header-actions {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 20rpx;
  margin-bottom: 24rpx;
}

.page-detail .header-actions .btn-sm {
  padding: 10rpx 24rpx;
  font-size: 26rpx;
  flex: 1;
}

.page-detail .loading-wrap {
  text-align: center;
  padding: 80rpx 0;
  color: #999;
}

.page-detail .detail-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.page-detail .detail-value {
  display: block;
  margin-top: 8rpx;
  color: #333;
}

.page-detail .detail-value.multi {
  white-space: pre-wrap;
  word-break: break-all;
}

.page-detail .form-row.inline {
  display: inline-block;
  margin-right: 32rpx;
}

.page-detail .media-list {
  margin-top: 16rpx;
}

.page-detail .media-item {
  margin-bottom: 24rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #eee;
}

.page-detail .media-item:last-child {
  border-bottom: none;
}

.page-detail .thumb {
  width: 100%;
  height: 360rpx;
  border-radius: 8rpx;
  background: #f0f0f0;
}

.page-detail .caption {
  display: block;
  margin-top: 12rpx;
  font-size: 26rpx;
  color: #666;
}

.page-detail .desc {
  display: block;
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #999;
}

.page-detail .link-btn {
  color: #1989fa;
  font-size: 26rpx;
  margin-right: 24rpx;
  margin-top: 8rpx;
  display: inline-block;
}

.page-detail .video-player {
  width: 100%;
  height: 360rpx;
  border-radius: 8rpx;
  background: #000;
}

.page-detail .video-actions {
  margin-top: 12rpx;
}
