/* 结果页样式 */
.page-results {
  padding-bottom: 40rpx;
  min-height: 100vh;
}

.page-results .header {
  text-align: left;
  color: #fff;
  margin-bottom: 30rpx;
  padding: 30rpx 20rpx;
}

.page-results .header .title {
  display: block;
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.page-results .header .desc {
  font-size: 26rpx;
  opacity: 0.9;
}

.empty {
  text-align: center;
  padding: 80rpx 40rpx;
  color: #666;
  font-size: 30rpx;
}

.summary-card {
  margin-bottom: 24rpx;
}

.summary-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.search-summary {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-top: 12rpx;
}

.search-summary .tag {
  background: #f5f5f5;
  padding: 10rpx 20rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  color: #666;
}

.content {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.list-wrap {
  height: 520rpx;
  background: #fff;
  border-radius: 24rpx;
  padding: 20rpx;
  box-sizing: border-box;
}

.apartment-card {
  background: #fafafa;
  border: 1rpx solid #eee;
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.apartment-card:last-child {
  margin-bottom: 0;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  padding-bottom: 12rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.apartment-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.top-badge {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  color: #fff;
  padding: 8rpx 20rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  font-weight: 600;
}

.info-row {
  display: flex;
  margin-bottom: 12rpx;
  align-items: flex-start;
  font-size: 26rpx;
}

.info-row .label {
  min-width: 140rpx;
  color: #666;
}

.info-row .value {
  flex: 1;
  color: #333;
}

.info-row .value.price {
  color: #e74c3c;
  font-weight: 600;
  font-size: 28rpx;
}

.info-row .value.address {
  color: #555;
  line-height: 1.5;
}

.info-row .value.remarks {
  color: #666;
  font-style: italic;
}

.distance {
  color: #999;
  font-size: 24rpx;
  margin-left: 8rpx;
}

.recommendation {
  background: #f8f9fa;
  padding: 16rpx;
  border-radius: 12rpx;
  margin-top: 16rpx;
  border-left: 6rpx solid #667eea;
}

.rec-title {
  display: block;
  font-weight: 600;
  color: #667eea;
  font-size: 26rpx;
  margin-bottom: 8rpx;
}

.rec-text {
  font-size: 26rpx;
  color: #555;
  line-height: 1.5;
}

.route {
  margin-top: 12rpx;
  padding: 12rpx 16rpx;
  background: #e8f4f8;
  border-radius: 10rpx;
  font-size: 24rpx;
  color: #555;
}

.route-title {
  font-weight: 600;
  color: #3498db;
  margin-right: 8rpx;
}

.btn-media {
  margin-top: 20rpx;
  padding: 16rpx 28rpx;
  background: #667eea;
  color: #fff;
  border: none;
  border-radius: 12rpx;
  font-size: 26rpx;
  font-weight: 500;
}

.map-wrap {
  height: 400rpx;
  border-radius: 24rpx;
  overflow: hidden;
  background: #f0f0f0;
}

.map {
  width: 100%;
  height: 100%;
}
