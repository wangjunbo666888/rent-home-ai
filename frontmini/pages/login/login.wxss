.page-login {
  min-height: 100vh;
  background: linear-gradient(180deg, #eef2ff 0%, #ffffff 50%);
  padding: 80rpx 48rpx 48rpx;
  box-sizing: border-box;
}

.header {
  text-align: center;
  margin-bottom: 80rpx;
}

.title {
  display: block;
  font-size: 44rpx;
  font-weight: 700;
  color: #1e293b;
  margin-bottom: 16rpx;
}

.desc {
  font-size: 28rpx;
  color: #64748b;
}

.form {
  background: #fff;
  border-radius: 24rpx;
  padding: 48rpx;
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.06);
}

.field {
  margin-bottom: 36rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #475569;
  margin-bottom: 16rpx;
}

.input {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
  color: #1e293b;
  background: #f8fafc;
  border-radius: 12rpx;
  box-sizing: border-box;
}

.code-row {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.code-input {
  flex: 1;
}

.btn-code {
  flex-shrink: 0;
  width: 200rpx;
  height: 88rpx;
  line-height: 88rpx;
  padding: 0;
  font-size: 26rpx;
  color: #4f46e5;
  background: #eef2ff;
  border: none;
  border-radius: 12rpx;
}

.btn-code[disabled] {
  color: #94a3b8;
  background: #f1f5f9;
}

.error {
  font-size: 26rpx;
  color: #dc2626;
  margin-bottom: 24rpx;
}

.btn-login {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  margin-top: 24rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #fff;
  background: linear-gradient(135deg, #4f46e5 0%, #7c3aed 100%);
  border: none;
  border-radius: 16rpx;
}

.btn-login[disabled] {
  opacity: 0.6;
}

.tip {
  text-align: center;
  font-size: 24rpx;
  color: #94a3b8;
  margin-top: 48rpx;
}
