.page-login {
  min-height: 100vh;
  padding: 80rpx 48rpx;
  box-sizing: border-box;
  background: linear-gradient(180deg, #1989fa 0%, #f5f5f5 40%);
}

.page-login .header {
  text-align: center;
  margin-bottom: 80rpx;
}

.page-login .header .title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 16rpx;
}

.page-login .header .desc {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

.page-login .form {
  background: #fff;
  border-radius: 20rpx;
  padding: 48rpx 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
}

.page-login .field {
  margin-bottom: 36rpx;
}

.page-login .field .label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.page-login .field .input {
  width: 100%;
  min-height: 88rpx;
  padding: 20rpx 24rpx;
  border: 1rpx solid #e5e5e5;
  border-radius: 12rpx;
  font-size: 28rpx;
  line-height: 1.5;
  box-sizing: border-box;
  background: #fafafa;
}

.page-login .field .input-placeholder {
  font-size: 28rpx;
  line-height: 1.5;
  color: #c8c9cc;
}

.page-login .error {
  font-size: 26rpx;
  color: #ee0a24;
  margin-bottom: 24rpx;
}

.page-login .btn-login {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #1989fa;
  color: #fff;
  font-size: 32rpx;
  border-radius: 12rpx;
  margin-top: 24rpx;
}

.page-login .btn-login[disabled] {
  background: #c8c9cc;
  color: #fff;
}
