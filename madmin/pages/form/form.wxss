.page-form .header-actions {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  margin-bottom: 24rpx;
}

.page-form .header-actions .btn-sm {
  padding: 10rpx 24rpx;
  font-size: 26rpx;
}

.page-form .loading-wrap {
  text-align: center;
  padding: 80rpx 0;
  color: #999;
}

.page-form .form-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.page-form .form-input {
  padding: 24rpx 16rpx;
  font-size: 28rpx;
  min-height: 88rpx;
  line-height: 1.5;
  box-sizing: border-box;
}

.page-form .form-row.inline {
  display: inline-block;
  width: 48%;
  margin-right: 2%;
  vertical-align: top;
}

.page-form .picker-value {
  padding: 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  color: #333;
}

.page-form .address-wrap {
  position: relative;
}

.page-form .suggestion-loading {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 24rpx;
  color: #999;
}

.page-form .suggestion-list {
  position: absolute;
  left: 0;
  right: 0;
  top: 100%;
  background: #fff;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  max-height: 400rpx;
  overflow-y: auto;
  z-index: 10;
  margin-top: 8rpx;
}

.page-form .suggestion-item {
  padding: 20rpx 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.page-form .suggestion-item:last-child {
  border-bottom: none;
}

.page-form .suggestion-title {
  display: block;
  font-size: 28rpx;
  color: #333;
}

.page-form .suggestion-address {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.page-form .upload-btn {
  margin-top: 16rpx;
  margin-bottom: 16rpx;
  background: #f0f0f0;
  color: #333;
  font-size: 28rpx;
}

.page-form .media-list {
  margin-top: 16rpx;
}

.page-form .media-item {
  margin-bottom: 24rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #eee;
}

.page-form .media-item:last-child {
  border-bottom: none;
}

.page-form .thumb {
  width: 100%;
  height: 320rpx;
  border-radius: 8rpx;
  background: #f0f0f0;
  display: block;
  margin-bottom: 12rpx;
}

.page-form .title-input,
.page-form .desc-input {
  display: block;
  width: 100%;
  padding: 16rpx 0;
  font-size: 26rpx;
  margin-bottom: 8rpx;
}

.page-form .desc-input {
  margin-bottom: 12rpx;
}

.page-form .link-btn {
  color: #1989fa;
  font-size: 26rpx;
}

.page-form .link-btn.danger {
  color: #ee0a24;
}

.page-form .video-player {
  width: 100%;
  height: 320rpx;
  border-radius: 8rpx;
  background: #000;
  display: block;
  margin-bottom: 12rpx;
}

.page-form .form-actions {
  display: flex;
  gap: 24rpx;
  margin-top: 32rpx;
  margin-bottom: 48rpx;
}

.page-form .form-actions .btn {
  flex: 1;
}
