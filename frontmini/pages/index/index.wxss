/* 首页：图中样式 - 浅灰背景 + 白卡片 + 浅灰边框 */
.page-index {
  min-height: 100vh;
  background: #f5f5f5;
}

.main-scroll {
  height: 100vh;
  box-sizing: border-box;
  padding: 32rpx 24rpx 48rpx;
  padding-top: 32rpx;
}

.guide-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 24rpx;
  margin-bottom: 24rpx;
  border-radius: 16rpx;
  font-size: 26rpx;
}
.guide-bar.need-login {
  background: #fef3c7;
  color: #92400e;
}
.guide-bar.need-subscribe {
  background: #dbeafe;
  color: #1e40af;
}
.guide-link {
  font-weight: 600;
  margin-left: 16rpx;
}

/* 顶部横幅：紫蓝渐变，与页面风格和谐 */
.top-banner {
  position: relative;
  margin-bottom: 40rpx;
  padding: 40rpx 32rpx 36rpx;
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 50%, #7c3aed 100%);
  border-radius: 28rpx;
  overflow: hidden;
}

.banner-title {
  display: block;
  position: relative;
  z-index: 1;
  font-size: 44rpx;
  font-weight: 700;
  color: #fff;
  text-align: center;
  margin-bottom: 16rpx;
}

.banner-desc {
  display: block;
  position: relative;
  z-index: 1;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.92);
  text-align: center;
  line-height: 1.5;
}

.banner-bg-icon {
  position: absolute;
  right: 20rpx;
  bottom: 10rpx;
  font-size: 120rpx;
  opacity: 0.12;
  z-index: 0;
}

.form-section {
  padding: 0;
}

/* 三个区块行间距拉大 */
.form-group {
  margin-bottom: 56rpx;
  position: relative;
}

.form-group:last-of-type {
  margin-bottom: 32rpx;
}

.label-row {
  display: flex;
  align-items: center;
  gap: 10rpx;
  margin-bottom: 16rpx;
  padding: 0 4rpx;
  line-height: 1.4;
}

.label-icon {
  font-size: 32rpx;
}

.label-icon.address { color: #ef4444; }
.label-icon.commute { color: #f59e0b; }
.label-icon.budget { color: #10b981; }

.label-text {
  font-size: 30rpx;
  font-weight: 700;
  color: #1f2937;
}

.label-required {
  color: #ef4444;
  font-size: 30rpx;
}

/* 白卡片输入框（浅灰边框） */
.input-wrap {
  position: relative;
  background: #fff;
  border: 2rpx solid #e5e7eb;
  border-radius: 24rpx;
  padding: 0 28rpx;
  min-height: 96rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  overflow: visible;
}

.input {
  flex: 1;
  height: 96rpx;
  font-size: 28rpx;
  color: #1f2937;
  line-height: 96rpx;
}

.address-wrap .input {
  padding-right: 80rpx;
}

.input-icon-target {
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  background: #3b82f6;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}

.loading-tip {
  position: absolute;
  right: 28rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 24rpx;
  color: #9ca3af;
  line-height: 1;
}

.budget-wrap {
  padding-left: 72rpx;
}

.budget-prefix {
  position: absolute;
  left: 28rpx;
  font-size: 32rpx;
  color: #6b7280;
  font-weight: 500;
}

.budget-input {
  padding: 0;
}

.hint {
  display: block;
  margin-top: 12rpx;
  padding: 0 4rpx;
  font-size: 24rpx;
  color: #9ca3af;
}

/* 地址联想列表 */
.suggestion-list {
  position: absolute;
  left: 0;
  right: 0;
  top: 100%;
  margin-top: 8rpx;
  background: #fff;
  border: 2rpx solid #e5e7eb;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
  max-height: 360rpx;
  overflow-y: auto;
  z-index: 50;
}

.suggestion-item {
  padding: 24rpx 28rpx;
  border-bottom: 1rpx solid #f3f4f6;
}

.suggestion-item:last-child {
  border-bottom: none;
}

.suggestion-title {
  display: block;
  font-weight: 600;
  color: #1f2937;
  font-size: 28rpx;
  margin-bottom: 8rpx;
}

.suggestion-address {
  display: block;
  font-size: 24rpx;
  color: #6b7280;
}

/* 通勤滑块白卡片 */
.slider-card {
  background: #fff;
  border: 2rpx solid #e5e7eb;
  border-radius: 24rpx;
  padding: 28rpx 28rpx 24rpx;
}

.slider-head {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.slider-value {
  font-size: 44rpx;
  font-weight: 800;
  color: #3b82f6;
}

.slider-unit {
  font-size: 28rpx;
  font-weight: 500;
  margin-left: 4rpx;
  color: #3b82f6;
}

.slider-desc {
  font-size: 24rpx;
  color: #9ca3af;
}

.slider {
  width: 100%;
  margin: 0;
}

/* 错误提示 */
.error-box {
  background: #fef2f2;
  color: #dc2626;
  padding: 24rpx;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  border-left: 6rpx solid #dc2626;
  font-size: 26rpx;
}

/* 主按钮：蓝紫渐变，高度适中 */
.btn-match {
  width: 100%;
  margin-top: 24rpx;
  padding: 22rpx 32rpx;
  background: linear-gradient(90deg, #3b82f6 0%, #6366f1 100%);
  color: #fff;
  border: none;
  border-radius: 20rpx;
  font-size: 30rpx;
  font-weight: 700;
  box-shadow: 0 8rpx 20rpx rgba(59, 130, 246, 0.35);
}

.btn-match[disabled] {
  opacity: 0.6;
}
