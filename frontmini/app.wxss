/**
 * 全局样式
 * 与 frontend 视觉风格一致
 */
page {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
}

.container {
  max-width: 750rpx;
  margin: 0 auto;
  padding: 30rpx;
  min-height: 100vh;
}

.card {
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.08);
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.text-error {
  color: #e74c3c;
  font-size: 28rpx;
}

.text-muted {
  color: #999;
  font-size: 26rpx;
}
