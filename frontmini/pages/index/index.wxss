/* 首页样式 */
.page-index {
  padding-bottom: 60rpx;
}

.header {
  text-align: center;
  color: #fff;
  margin-bottom: 40rpx;
  padding: 40rpx 20rpx;
}

.header .title {
  display: block;
  font-size: 44rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.header .desc {
  font-size: 28rpx;
  opacity: 0.95;
}

.form-card {
  max-width: 600rpx;
  margin: 0 auto;
}

.form-group {
  margin-bottom: 36rpx;
}

.form-group .label {
  display: block;
  font-weight: 600;
  color: #333;
  font-size: 30rpx;
  margin-bottom: 12rpx;
}

.required {
  color: #e74c3c;
}

.form-group .input {
  width: 100%;
  height: 88rpx;
  padding: 0 28rpx;
  line-height: 88rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 16rpx;
  font-size: 30rpx;
  box-sizing: border-box;
  display: block;
}

.form-group .input:focus {
  border-color: #667eea;
}

.hint {
  display: block;
  margin-top: 12rpx;
  color: #666;
  font-size: 24rpx;
}

.form-group-address .address-wrap {
  position: relative;
}

.suggestion-list {
  position: absolute;
  left: 0;
  right: 0;
  top: 100%;
  margin-top: 4rpx;
  background: #fff;
  border: 2rpx solid #667eea;
  border-radius: 0 0 16rpx 16rpx;
  box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.12);
  max-height: 400rpx;
  overflow-y: auto;
  z-index: 100;
}

.suggestion-item {
  padding: 24rpx 28rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.suggestion-item:last-child {
  border-bottom: none;
}

.suggestion-title {
  display: block;
  font-weight: 600;
  color: #333;
  font-size: 28rpx;
  margin-bottom: 8rpx;
}

.suggestion-address {
  display: block;
  font-size: 24rpx;
  color: #666;
}

.loading-tip {
  position: absolute;
  right: 28rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 24rpx;
  color: #999;
}

.error-box {
  background: #fee;
  color: #c33;
  padding: 24rpx;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
  border-left: 6rpx solid #c33;
  font-size: 26rpx;
}

.btn-search {
  width: 100%;
  margin-top: 20rpx;
  padding: 28rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border: none;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 600;
}

.btn-search[disabled] {
  opacity: 0.6;
}

.empty-tip {
  text-align: center;
  padding: 60rpx 30rpx;
  color: rgba(255, 255, 255, 0.9);
  font-size: 28rpx;
}
