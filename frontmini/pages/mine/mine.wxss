/* 我的：与首页一致的 indigo 风格 */
.page-mine {
  min-height: 100vh;
  background: linear-gradient(180deg, #eef2ff 0%, #ffffff 100%);
}

.header-bar {
  height: 88rpx;
  padding: 0 32rpx;
  padding-top: constant(safe-area-inset-top);
  padding-top: env(safe-area-inset-top);
  background: rgba(255, 255, 255, 0.9);
  display: flex;
  align-items: center;
  position: sticky;
  top: 0;
  z-index: 100;
}

.header-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1e293b;
}

.main-scroll {
  height: calc(100vh - 88rpx - 120rpx);
  padding: 24rpx;
  box-sizing: border-box;
}

.card {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  border: 2rpx solid #f1f5f9;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}

.user-card {
  display: flex;
  align-items: center;
  gap: 28rpx;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #4f46e5 0%, #7c3aed 100%);
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-placeholder {
  font-size: 44rpx;
  font-weight: 700;
  color: #fff;
}

.user-info {
  flex: 1;
}

.info-row {
  margin-bottom: 16rpx;
  padding: 12rpx 0;
  border-bottom: 1rpx solid #f1f5f9;
}

.info-row:last-child {
  margin-bottom: 0;
  border-bottom: none;
}

.info-line {
  display: block;
  font-size: 30rpx;
  line-height: 1.5;
}

.info-line .info-label {
  font-size: 28rpx;
  color: #64748b;
  margin-right: 24rpx;
}

.info-line .info-value {
  font-weight: 500;
  color: #1e293b;
}

.card-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #334155;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #f1f5f9;
}

.extra-row {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f1f5f9;
}

.extra-row:last-child {
  border-bottom: none;
}

.extra-label {
  width: 160rpx;
  font-size: 28rpx;
  color: #64748b;
}

.extra-value {
  flex: 1;
  font-size: 28rpx;
  color: #1e293b;
}

.guest-tip {
  display: block;
  font-size: 30rpx;
  color: #64748b;
  margin-bottom: 24rpx;
}

.btn-primary {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 30rpx;
  font-weight: 600;
  color: #fff;
  background: linear-gradient(135deg, #4f46e5 0%, #7c3aed 100%);
  border: none;
  border-radius: 12rpx;
}

.info-line .info-value.status-ok { color: #059669; }
.info-line .info-value.status-none { color: #dc2626; }

.action-card .card-desc {
  display: block;
  font-size: 26rpx;
  color: #64748b;
  margin-bottom: 24rpx;
}

.order-row {
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f1f5f9;
}

.order-row:last-child { border-bottom: none; }

.order-line {
  font-size: 26rpx;
  line-height: 1.5;
  color: #1e293b;
}

.order-line .order-id { color: #64748b; }
.order-line .order-plan { color: #1e293b; font-weight: 500; }
.order-line .order-status { color: #f59e0b; }
.order-line .order-status.paid { color: #059669; }
.order-line .order-expire { color: #64748b; font-size: 24rpx; }

.loading-tip {
  text-align: center;
  padding: 48rpx;
  color: #94a3b8;
  font-size: 28rpx;
}

.logout-wrap {
  margin-top: 32rpx;
  padding: 0 0 32rpx;
}

.btn-logout {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 28rpx;
  color: #64748b;
  background: #fff;
  border: 2rpx solid #e2e8f0;
  border-radius: 12rpx;
}

.btn-logout::after {
  border: none;
}
