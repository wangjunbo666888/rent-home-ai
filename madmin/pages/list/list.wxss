.page-list .search-bar {
  background: #fff;
  padding: 32rpx;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
}

.page-list .search-row {
  margin-bottom: 28rpx;
}

.page-list .search-row:last-of-type {
  margin-bottom: 24rpx;
}

.page-list .search-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.page-list .search-input {
  width: 100%;
  padding: 20rpx 24rpx;
  border: 1rpx solid #e5e5e5;
  border-radius: 10rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  background: #fafafa;
  min-height: 80rpx;
}

.page-list .search-btns {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 20rpx;
  padding-top: 8rpx;
}

.page-list .search-btns .btn-sm {
  padding: 10rpx 24rpx;
  font-size: 26rpx;
  flex: 1;
}

.page-list .summary {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.page-list .loading-wrap {
  text-align: center;
  padding: 80rpx 0;
  color: #999;
}

.page-list .table-wrap {
  width: 100%;
  background: #fff;
  border-radius: 12rpx;
}

.page-list .table {
  display: inline-block;
  min-width: 1400rpx;
}

.page-list .table-head,
.page-list .table-row {
  display: flex;
  border-bottom: 1rpx solid #eee;
}

.page-list .table-head {
  background: #f8f8f8;
  font-weight: bold;
  color: #333;
}

.page-list .col {
  padding: 20rpx 16rpx;
  flex-shrink: 0;
  font-size: 24rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  min-width: 0;
}

.page-list .col-id { width: 140rpx; }
.page-list .col-name { width: 160rpx; }
.page-list .col-price { width: 160rpx; }
.page-list .col-address { width: 480rpx; }
.page-list .col-district { width: 100rpx; }
.page-list .col-remarks { width: 160rpx; }
.page-list .col-actions {
  width: 200rpx;
  overflow: visible;
  text-overflow: clip;
}

.page-list .col-actions .link-btn {
  margin-right: 12rpx;
  color: #1989fa;
}
.page-list .col-actions .link-btn.danger {
  color: #ee0a24;
}

.page-list .pagination {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  margin-top: 32rpx;
  gap: 16rpx;
}

.page-list .btn-page {
  padding: 12rpx 24rpx;
  font-size: 24rpx;
}

.page-list .page-info {
  font-size: 26rpx;
  color: #666;
}
